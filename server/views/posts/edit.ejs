<h1>Edit post</h1>

<form action="/posts/<%= post.id %>?_method=PUT" method="POST">
  <input
    type="text"
    name="post[title]"
    placeholder="Title"
    value="<%= post.title %>"
  />
  <input
    type="text"
    name="post[price]"
    placeholder="Price"
    value="<%= post.price %>"
  />
  <input
    type="text"
    name="post[images]"
    placeholder="Paste url images"
    value="<%= post.images %>"
  />
  <textarea name="post[description]" placeholder="Description">
    <%= post.description %>
  </textarea>
  <input
    type="text"
    name="post[location]"
    placeholder="Location"
    value="<%= post.location %>"
  />
  <button type="submit">Update</button>
</form>
